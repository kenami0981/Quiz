<UserControl x:Class="Quiz.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Quiz.ViewModel">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Co chcesz zrobić?" FontSize="25" Margin="5"></TextBlock>
            <Button Content="Stwórz quiz" Command="{Binding UpdateViewCommand}" CommandParameter="create" Margin="5" Width="130" FontSize="17"/>
            <Button Content="Rozwiąż quiz" Command="{Binding UpdateViewCommand}" CommandParameter="solve" Margin="5" Width="130" FontSize="17"/>
        </StackPanel>
    </Grid>
</UserControl>